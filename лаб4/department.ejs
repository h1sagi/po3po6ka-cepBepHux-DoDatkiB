<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <title>Department</title>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center mt-3 mb-3"><%= title %></h1>
            <% if(action == 'add') { %>
                <div class="card">
                    <div class="card-header">Insert Form</div>
                    <div class="card-body">
                        <form method="POST" action="/department/add_data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Department Id</label>
                                        <input type="number" name="department_id" id="department_id" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Department Name</label>
                                        <input type="text" name="department_name" id="department_name" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Department Type</label>
                                        <input type="text" name="department_type" id="department_type" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Department Staff</label>
                                        <input type="number" name="department_staff" id="department_staff" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Department Date Of Creation</label>
                                        <input type="date" name="department_date_of_creation" id="department_date_of_creation" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <input type="submit" name="submit_button" class="btn btn-primary" value="Add" />
                            </div>
                        </form>
                    </div>
                </div>
            <% } else if(action == 'edit') { %>
                <div class="card">
                    <div class="card-header">Edit Form</div>
                    <div class="card-body">
                        <form method="POST" action="/department/edit/<%= department.department_id %>">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Department Id</label>
                                        <input type="number" name="department_id" id="department_name" class="form-control" value="<%= department.department_id %>" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Department Name</label>
                                        <input type="text" name="department_name" id="department_name" class="form-control" value="<%= department.department_name %>" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Department Type</label>
                                        <input type="text" name="department_type" id="department_type" class="form-control" value="<%= department.department_type %>" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Department Staff</label>
                                        <input type="number" name="department_staff" id="department_staff" class="form-control" value="<%= department.department_staff %>" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Department Date Of Creation</label>
                                        <input type="date" name="department_date_of_creation" id="department_date_of_creation" class="form-control" value="<%= department.department_date_of_creation %>" />
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <input type="submit" name="submit_button" class="btn btn-primary" value="Edit" />
                            </div>
                        </form>
                    </div>
                </div>
                <% } else { %>
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">
                            <a href="/department/add" class="btn btn-success btn-sm float-end">Add</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>Department Id</th>
                                <th>Department Name</th>
                                <th>Department Type</th>
                                <th>Department Staff</th>
                                <th>Department Date Of Creation</th>
                            </tr>
                            <%
                            if(sampleData.length > 0)
                            {
                                sampleData.forEach(function(data){
                            %>
                            <tr>
                                <td><%= data.department_id %></td>
                                <td><%= data.department_name %></td>
                                <td><%= data.department_type %></td>
                                <td><%= data.department_staff %></td>
                                <td><%= data.department_date_of_creation %></td>
                                <td><a href="/department/edit/<%= data.department_id %>" class="btn btn-primary btn-sm">Edit</a></td>
                                <td><a href="/department/delete/<%= data.department_id %>" class="btn btn-danger btn-sm">Delete</a></td>
                            </tr>
                            <%
                                });
                            }
                            else
                            {
                            %>
                            <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                    </div>
                </div>
            </div>

            <% } %>

        </div> 

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
