<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title></title>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center mt-3 mb-3"><%= title %></h1>
            
            <% if(action == 'add') { %>
                <div class="card">
                    <div class="card-header">Insert Form</div>
                    <div class="card-body">
                        <form method="POST" action="/manager/add_data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Manager Id</label>
                                        <input type="number" name="manager_id" id="manager_id" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Department Id</label>
                                        <input type="number" name="department_id" id="department_id" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Manager Name</label>
                                        <input type="text" name="manager_name" id="manager_name" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Manager Surname</label>
                                        <input type="text" name="manager_surname" id="manager_surname" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Manager Project</label>
                                        <input type="text" name="manager_project" id="manager_project" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <input type="submit" name="submit_button" class="btn btn-primary" value="Add" />
                            </div>
                        </form>
                    </div>
                </div>
                <% } else if(action == 'edit') { %>
                    <div class="card">
                        <div class="card-header">Edit Form</div>
                        <div class="card-body">
                            <form method="POST" action="/manager/edit/<%= manager.manager_id %>">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Manager Id</label>
                                            <input type="number" name="manager_id" id="manager_id" class="form-control" value="<%= manager.manager_id %>" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Department Id</label>
                                            <input type="number" name="department_id" id="department_id" class="form-control" value="<%= manager.department_id %>" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Manager Name</label>
                                            <input type="text" name="manager_name" id="manager_name" class="form-control" value="<%= manager.manager_name %>" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Manager Surname</label>
                                            <input type="text" name="manager_surname" id="manager_surname" class="form-control" value="<%= manager.manager_surname %>" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Manager Project</label>
                                            <input type="text" name="manager_project" id="manager_project" class="form-control" value="<%= manager.manager_project %>" />
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <input type="submit" name="submit_button" class="btn btn-primary" value="Edit" />
                                </div>
                            </form>
                    
                        </div>
                    </div>
                    <% } else { %>
                
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">
                            <a href="/manager/add" class="btn btn-success btn-sm float-end">Add</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>Manager Id</th>
                                <th>Department Id</th>
                                <th>Manager Name</th>
                                <th>Manager Surname</th>
                                <th>Manager Project</th>
                            </tr>
                            <%
                            if(sampleData.length > 0)
                            {
                                sampleData.forEach(function(data){
                            %>
                            <tr>
                                <td><%= data.manager_id %></td>
                                <td><%= data.department_id %></td>
                                <td><%= data.manager_name %></td>
                                <td><%= data.manager_surname %></td>
                                <td><%= data.manager_project %></td>
                                <td><a href="/manager/edit/<%= data.manager_id %>" class="btn btn-primary btn-sm">Edit</a>
                                </td>
                                <td><a href="/manager/delete/<%= data.manager_id %>" class="btn btn-danger btn-sm">Delete</a></td>
                            </tr>
                            <%
                                });
                            }
                            else
                            {
                            %>
                            <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                    </div>
                </div>
            </div>

            <% } %>

        </div> 

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>
